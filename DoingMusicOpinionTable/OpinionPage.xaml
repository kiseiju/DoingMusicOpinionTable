                        <RadioButton x:Name="radioButton4_2" Content="燉飯" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_3" Content="義大利麵" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_4" Content="砂鍋" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_5" Content="沙拉" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_6" Content="炸物" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_7" Content="澳洲鹹派" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_8" Content="鬆餅" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_9" Content="千層披薩" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4"/>
                        <RadioButton x:Name="radioButton4_10" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4">
                            <TextBox Text="下午茶套餐" Width="120"/>
                        </RadioButton>

                        <RadioButton x:Name="radioButton4_11" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_4">
                            <TextBox Text="手作點心" Width="120"/>
                        </RadioButton>
                        
                    </StackPanel>
                </Grid>
                <Grid Height="30">
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
