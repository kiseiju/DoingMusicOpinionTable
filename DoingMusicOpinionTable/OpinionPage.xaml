                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="上菜速度:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_3_4_1" Content="慢" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_3_4"/>
