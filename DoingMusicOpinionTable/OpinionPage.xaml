                            <RadioButton x:Name="radioButton6_1_4_1" Content="不滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_4"/>
                            <RadioButton x:Name="radioButton6_1_4_2" Content="尚可" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_4"/>
                            <RadioButton x:Name="radioButton6_1_4_3" Content="滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_4"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="2.您認為本館菜色的感覺是？" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="種類：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_2_1_1" Content="不滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_1"/>
                            <RadioButton x:Name="radioButton6_2_1_2" Content="尚可" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_1"/>
                            <RadioButton x:Name="radioButton6_2_1_3" Content="滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="份量：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_2_2_1" Content="不滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_2"/>
                            <RadioButton x:Name="radioButton6_2_2_2" Content="尚可" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_2"/>
                            <RadioButton x:Name="radioButton6_2_2_3" Content="滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_2"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="新鮮程度:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_2_3_1" Content="不滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_3"/>
                            <RadioButton x:Name="radioButton6_2_3_2" Content="尚可" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_3"/>
                            <RadioButton x:Name="radioButton6_2_3_3" Content="滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_3"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="菜色整體滿意度如何：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_2_4_1" Content="不滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_4"/>
                            <RadioButton x:Name="radioButton6_2_4_2" Content="尚可" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_4"/>
                            <RadioButton x:Name="radioButton6_2_4_3" Content="滿意" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_2_4"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="3.你認為本館的服務怎麼樣？" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="互動：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_3_1_1" Content="幾乎沒有" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_3_1"/>
                            <RadioButton x:Name="radioButton6_3_1_2" Content="偶爾有" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_3_1"/>
