                        <RadioButton x:Name="radioButton2_5" Content="路過" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_2"/>
                        <RadioButton x:Name="radioButton2_6" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_2">
                            <TextBox Text="其他" Width="120"/>
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid Height="30">
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Label Content="三、請問您今天到本館用餐的原因是？" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                        <RadioButton x:Name="radioButton3_1" Content="家庭聚餐" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_2" Content="朋友聚餐" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_3" Content="慶生" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_4" Content="休閒旅遊" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_5" Content="寵物體驗" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_6" Content="結婚紀念" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3"/>
                        <RadioButton x:Name="radioButton3_7" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_3">
                            <TextBox Text="其他" Width="120"/>
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid Height="30">
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Label Content="四、請問您今天的餐點是？" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
