                            <TextBox Text="其他" Width="120"/>
                        </RadioButton>

                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="六、" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="1.請問您今天用餐的感覺是？" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="鹹度：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_1_1_1" Content="太淡" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_1"/>
                            <RadioButton x:Name="radioButton6_1_1_2" Content="適中" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_1"/>
                            <RadioButton x:Name="radioButton6_1_1_3" Content="太鹹" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="甜度：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_1_2_1" Content="太淡" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_2"/>
                            <RadioButton x:Name="radioButton6_1_2_2" Content="適中" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_2"/>
