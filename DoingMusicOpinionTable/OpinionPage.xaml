                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Label Content="油膩度：" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0"/>
                            <RadioButton x:Name="radioButton6_1_3_1" Content="太淡" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_3"/>
                            <RadioButton x:Name="radioButton6_1_3_2" Content="適中" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_3"/>
                            <RadioButton x:Name="radioButton6_1_3_3" Content="太油" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" GroupName="QG_6_1_3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
